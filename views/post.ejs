<%- include("partials/header") %>
<div class="main">
  <h1 class="heading">Post Something</h1>
<form action="/post" method="post">
  <div class="form-group">
    <label>Patient Name</label>
    <input class="form-control" type="text" name="name" />

    <label>Age</label>
    <input class="form-control" type="text" name="age" />

    <label>City</label>
    <input id="cityName" class="form-control" type="text" name="city" />

    <label>Temperature</label>
    <input class="form-control" type="text" name="temperature" />

    <label>SPO2 count</label>
    <input class="form-control" type="text" name="count" />
    <br />
    <label for="requirement"> Covid test</label>
    &nbsp;
    &nbsp;
    <select name="result" id="result" >
      <option value="Positive">Positive</option>
      <option value="Negative">Negative</option>
      <option value="Not done">Not done</option>
    </select>
    <br />
    <br />
    <label>Attendant Contact</label>
    <input class="form-control" type="text" name="contact" />
    <br>
    &nbsp;
    &nbsp;
    <label for="requirement"> Requirement</label>
    <select name="requirement" id="requirement" >
      <option value="Beds without oxygen">Beds without oxygen</option>
      <option value="Beds with oxygen">Beds with oxygen</option>
      <option value="Medicine Type">Medicine Type</option>
      <option value="Oxygen Concentrator">Oxygen Concentrator</option>
      <option value="Plasma">Plasma</option>
      <option value="Other">Other</option>
    </select>
   
    <br><br>
    <label>Mention Requirement</label>
    
  
    <textarea class="form-control" name="content" rows="5" cols="30"></textarea>
  </div>
  <button
    type="submit"
    style="background-color: #006b96"
    class="btn btn-primary"
  >
    Publish
  </button>
</form>

</div>

<%- include("partials/footer") %>
